<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="1dip" android:color="#FCFDFD" />
            <gradient android:angle="-90" android:startColor="#FCFDFD" android:endColor="#FCFDFD"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="1dip" android:color="#FCFDFD" />
            <solid android:color="#FCFDFD"/>
        </shape>
    </item>  
    <item >
       <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="1dip" android:color="#FCFDFD" />
            <gradient android:angle="-90" android:startColor="#FCFDFD" android:endColor="#CAC5C5" />
       </shape>
    </item>
</selector>